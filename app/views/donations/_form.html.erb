<%= form_for([User.find(user_id),@donation]) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Tanggal penjemputan' %><br />
    <%= f.text_field :pickup_date, :class=>'datepicker'%>
  </div>
  <div class="field">
    <%= f.label 'Alamat penjemputan' %><br/>
    <%= f.text_area :address, :placeholder => 'Mohon isi dengan alamat lengkap' %>
  </div>
  <div class="field">
    <%= f.label 'Keterangan singkat' %><br />
    <%= f.text_area :description,:placeholder => 'Mohon cantumkan jenis, jumlah dan perkiraan berat dari total keseluruhan barang.' %>
  </div>
  <div class="field">
    <%= f.label 'Bagian yang disumbangkan' %><br />
    <%= f.select :percentage, [['100%',100],['75%',75],['50%',50]] %>
  </div>

  <div class="field">
    <p>
      <b>Foto dari barang2 yang akan disumbangkan</b>
    </p>
    <%= f.file_field :image %>
  </div>

  <p class='note'>
  <i>Penjemputan sumbangan dikenakan biaya Rp. 25.000 per barang? ;p</i>
</p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
